= form_for @lesson do |f|
  - if @lesson.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lesson.errors.count, "error")} prohibited this lesson from being saved:"
      %ul
        - @lesson.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :date_from
    = f.datetime_select :date_from
  .field
    = f.label :date_to
    = f.datetime_select :date_to
  .field
    = f.label :tutor
    = f.text_field :tutor
  .actions
    = f.submit 'Save'
