%h1 Listing lessons

%table
  %thead
    %tr
      %th Name
      %th Url
      %th Date from
      %th Date to
      %th Tutor
      %th
      %th
      %th

  %tbody
    - @lessons.each do |lesson|
      %tr
        %td= lesson.name
        %td= lesson.url
        %td= lesson.date_from
        %td= lesson.date_to
        %td= lesson.tutor
        %td= link_to 'Show', lesson
        %td= link_to 'Edit', edit_lesson_path(lesson)
        %td= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Lesson', new_lesson_path
