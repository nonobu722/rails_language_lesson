= provide(:title, t('.title'))
%h1= t('.title')
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = bootstrap_devise_error_messages!
  .form-group
    = f.label :name
    = f.text_field :name, autofocus: true, class: 'form-control'
  .form-group
    = f.label :image
    = f.file_field :image, class: 'form-control-file'
  .form-group
    = f.label :profile
    = f.text_area :profile, class: 'form-control'
  .form-group
    = f.label :language_id
    = f.select :language_id, Language.all.map { |lang| [lang.name, lang.id] }, {prompt: t('shared.select.prompt')}, class: 'form-control'
  .form-group
    = f.submit t('.update', default: 'Update'), class: 'btn btn-primary'
= link_to t('.back', default: 'Back'), :back
